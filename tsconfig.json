{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["build", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  }
}
